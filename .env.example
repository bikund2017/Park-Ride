# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and replace with your actual values
# NEVER commit the .env file to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3002

# ============================================
# SECURITY - JWT SECRET
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_here

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# API KEYS FOR DELHI TRANSIT DATA
# ============================================

# Delhi Open Transit Data (OTD) API
# Get your key from: https://otd.delhi.gov.in/
DELHI_TRANSIT_API_KEY=your_delhi_transit_api_key_here

# Delhi Metro Rail Corporation (DMRC) API
# Get your key from: https://www.delhimetrorail.com/
DMRC_API_KEY=your_dmrc_api_key_here

# Delhi Transport Corporation (DTC) Bus API
# Get your key from: https://otis.dimts.in/
DTC_API_KEY=your_dtc_api_key_here

# Indian Railways IRCTC API
# Get your key from: https://www.irctc.co.in/
IRCTC_API_KEY=your_irctc_api_key_here

# RapidAPI for Indian Railways (Alternative)
# Get your key from: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key_here

# Smart Parking API (IoT Sensors)
# Configure your IoT parking sensor API
PARKING_API_KEY=your_parking_api_key_here
PARKING_API_URL=https://your-parking-api.com/api

# ============================================
# CLOUDINARY CONFIGURATION (for image uploads)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Option 1: Use service account file (serviceAccountKey.json) - RECOMMENDED
# Option 2: Use environment variables below
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key_with_escaped_newlines

# ============================================
# REDIS CONFIGURATION (optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379
