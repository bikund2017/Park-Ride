{
  "name": "park-and-ride-delhi-ncr",
  "version": "1.0.0",
  "description": "Real-time Delhi NCR transit tracking and parking availability web application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon --watch . --ignore client/ --ignore node_modules/ server.js",
    "dev:debug": "nodemon --inspect server.js",
    "dev:client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev:watch\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --ignore-path .gitignore --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "delhi",
    "metro",
    "transit",
    "parking",
    "real-time",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "axios": "^1.4.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "validator": "^13.15.20"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.10",
    "winston": "^3.18.3"
  }
}
