{
  "watch": [".", "!client", "!node_modules", "!uploads", "!logs"],
  "ext": "js,json",
  "ignore": [
    "client/**/*",
    "node_modules/**/*",
    "uploads/**/*",
    "logs/**/*",
    "*.test.js",
    "*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'ðŸ”„ Server restarted due to file changes'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for file changes before restart'"
  },
  "delay": 1000,
  "restartable": "rs",
  "colours": true,
  "verbose": true
}
